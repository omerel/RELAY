<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
       android:id="@+id/status_bar_label_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Mode: "/>

    <TextView
        android:id="@+id/status_bar_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_bar_label_mode"
        android:text="Bluetooth "/>

    <TextView
        android:id="@+id/status_bar_label_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/status_bar_mode_text"
        android:textColor="@android:color/black"
        android:text="State: "/>

    <TextView
        android:id="@+id/status_bar_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_bar_label_state"
        android:text="Searching devices "/>




</RelativeLayout>